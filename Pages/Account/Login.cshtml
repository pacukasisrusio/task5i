@page
@model penkta.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/site.css" rel="stylesheet" />

<div class="loginpage">
    <div class="left-panel">
        <h1 class="mb-4">THE APP</h1>

        <div class="userui">
            <span class="mb-2">Start your journey</span>
            <span class="mb-4">Sign in to the app</span>

            <form method="post" class="userinput">
                <div class="mb-3">
                    <input asp-for="Input.Username" type="text" class="form-control" placeholder="Username" />
                </div>

                <div class="mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email" />
                </div>

                <div class="mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>

        <div class="left-bottom mt-4">
            <div class="signupl">
                <span>Donâ€™t have an account?</span>
                <a asp-page="/Account/Register">Sign up!</a>
            </div>
            <div class="forgotpsw">
                <a asp-page="/Account/ForgotPassword">Forgot password</a>
            </div>
        </div>
    </div>

    <div class="right-panel"></div>
</div>
